@model VirtualProjectManagment.Models.ForgotPasswordModel

@{
    ViewBag.Title = "Zapomniałem Hasło";
}

@using (Html.BeginForm())
            {
    <div class="form-horizontal">
        @Html.AntiForgeryToken()

        <hr />

        <div class="col-md-offset-4">
            @Html.ValidationSummary()
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.Login, new {@class = "col-md-4 control-label"})
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Login, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" value="Resetuj Hasło" class="btn btn-default" />

            </div>
        </div>
    </div>
}