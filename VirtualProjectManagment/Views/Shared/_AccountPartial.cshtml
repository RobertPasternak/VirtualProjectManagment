@using BackendlessAPI

@{
    BackendlessUser user = Backendless.UserService.CurrentUser;
}


@if (user != null)
{

        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Witaj " + (String)user.Properties["name"] + "!", "Index", "Home")</li>
            <li>@Html.ActionLink("Wyloguj się", "Logout", "Account")</li>
        </ul>
    
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Zarejestruj się", "Register", "Account")</li>
        <li>@Html.ActionLink("Zaloguj się", "Login", "Account")</li>
    </ul>
}

